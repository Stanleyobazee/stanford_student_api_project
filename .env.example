# Stanford Students API - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
POSTGRES_USER=postgres
POSTGRES_DB=stanford_students
DATABASE_URL=postgres://postgres:${DB_PASSWORD}@localhost:5432/stanford_students?sslmode=disable

# Vault Configuration
VAULT_ROOT_TOKEN=your_secure_vault_token_here
VAULT_ADDR=http://localhost:8200

# Application Configuration
PORT=8080
LOG_LEVEL=info
GIN_MODE=release

# Security Notes:
# 1. Generate strong passwords: openssl rand -base64 32
# 2. Generate secure tokens: openssl rand -hex 32
# 3. Never use default or example values in production
# 4. Rotate credentials regularly